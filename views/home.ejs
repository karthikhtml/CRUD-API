<%-include('layouts/header.ejs') %>
<main class="flex-grow container mx-auto p-4">
  <% if(message) {%>
  <div
    id="alert-box"
    class="flex items-center justify-between p-4 mb-4 bg-blue-100 border border-blue-400 text-blue-700 rounded"
    role="alert"
  >
    <div class="flex items-center">
      <svg
        class="w-6 h-6 mr-2 fill-current text-blue-500"
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 20 20"
      >
        <path
          d="M10 20c5.523 0 10-4.477 10-10S15.523 0 10 0 0 4.477 0 10s4.477 10 10 10zm-1-14h2v5h-2V6zm0 7h2v2h-2v-2z"
        />
      </svg>
      <span><%= message.message %></span>
    </div>
    <button
      type="button"
      class="text-blue-500 hover:text-blue-700"
      onclick="dismissAlert()"
    >
      <svg
        class="w-6 h-6 fill-current"
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 20 20"
      >
        <path
          d="M10 8.586l-4.95-4.95L4.95 2.95 10 7.414l4.95-4.95 1.414 1.414L11.414 10l4.95 4.95-1.414 1.414L10 11.414l-4.95 4.95-1.414-1.414L8.586 10z"
        />
      </svg>
    </button>
  </div>

  <script>
    function dismissAlert() {
      document.getElementById('alert-box').style.display = 'none'
    }
  </script>
  <% } %>
  <div class="container mx-auto">
    <div class="overflow-x-auto">
      <% if (userDetails.length > 0) { %>
      <table class="min-w-full bg-white">
        <thead>
          <tr>
            <th
              class="px-6 py-3 border-b-2 border-gray-300 text-left leading-4 text-blue-500 tracking-wider"
            >
              ID
            </th>
            <th
              class="px-6 py-3 border-b-2 border-gray-300 text-left leading-4 text-blue-500 tracking-wider"
            >
              Name
            </th>
            <th
              class="px-6 py-3 border-b-2 border-gray-300 text-left leading-4 text-blue-500 tracking-wider"
            >
              Email
            </th>
            <th
              class="px-6 py-3 border-b-2 border-gray-300 text-left leading-4 text-blue-500 tracking-wider"
            >
              Phone
            </th>
            <th
              class="px-6 py-3 border-b-2 border-gray-300 text-left leading-4 text-blue-500 tracking-wider"
            >
              Actions
            </th>
          </tr>
        </thead>
        <tbody>
          <% userDetails.forEach(user => { %>
          <tr>
            <td class="px-6 py-2 border-b border-gray-300 text-sm">
              <%= user._id %>
            </td>
            <td class="px-6 py-2 border-b border-gray-300 text-sm">
              <%= user.name %>
            </td>
            <td class="px-6 py-2 border-b border-gray-300 text-sm">
              <%= user.email %>
            </td>
            <td class="px-6 py-2 border-b border-gray-300 text-sm">
              <%= user.phone %>
            </td>
            <td class="px-6 py-2 border-b border-gray-300 text-sm">
              <button class="text-blue-500 hover:text-blue-700 mr-2">
                <a href="/edit/<%= user._id %>"><i class="fas fa-edit"></i></a>
              </button>
              <button class="text-red-500 hover:text-red-700">
                <a href="/delete/<%= user._id %>"
                  ><i class="fas fa-trash-alt"></i
                ></a>
              </button>
            </td>
          </tr>
          <% }) %>
          <!-- More rows... -->
        </tbody>
      </table>
      <% }else { %>
      <div class="flex items-center justify-center"></div>
      <h1 class="text-red-500 text-lg font-semibold">No items found.</h1>
      <% } %>
    </div>
  </div>
</main>
<%-include('layouts/footer.ejs') %>
